<div class="blog-posts postdetail">
<article>
    <div class="hd">
        <h3>{{title}}</h3>
        <span>Posted by {{User.username}} on {{date}}</span>
    </div>
    <p>{{content}}</p>
</article>



<section class="view-cmts">
    <h4>Comments:</h4>
    {{#each Comments}}
    <div class="cmt">
        <p>{{content}}</p>
        <span>
            {{#if myComment}}
            <a href="##" class="cmt-upd-btn" data-cmtid="{{id}}">Update</a>
            <a href="##" class="cmt-del-btn" data-cmtid="{{id}}">Delete</a>
            {{/if}}    
            {{User.username}}, {{date}}</span>
    </div>
    {{/each}}

    <div class="create-cmt">
        {{#if logged_in}}
        <form id="create-cmt" data-postid="{{id}}">
            <label for="new-comment">Add a comment:</label>
            <textarea id="new-comment"></textarea>
            <button>Submit</button>
        </form>
        <script src="/js/create-cmt.js"></script>
        {{else}}
        <p>Please log in to add a comment.</p>
        {{/if}}
    </div>

</section>

</div>




